{% extends '@Catalog/components/base_filter_form.html.twig' %}

{% set formAction = path('gt.catalog.product_log') %}
{% set clearPath = path('gt.catalog.product_log') %}


{% block first_column_filter_fields %}
    <div class="form-group">
        {{ form_label(filterForm.sku, 'Sku') }}
        {{ form_widget(filterForm.sku, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(filterForm.language, 'Language') }}
        {{ form_widget(filterForm.language, { 'attr': {'class': 'form-control'} }) }}
    </div>
{% endblock %}



{% block third_column_filter_fields %}
    <div class="form-group">
        {{ form_label(filterForm.offset, 'Offset') }}
        {{ form_widget(filterForm.offset, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(filterForm.limit, 'Limit') }}
        {{ form_widget(filterForm.limit, { 'attr': {'class': 'form-control'} }) }}
    </div>
{% endblock %}
