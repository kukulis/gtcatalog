{% extends 'admin_base.html.twig' %}

{% block title %}Pictures jobs list{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {{ form(filterForm) }}
            </div>
            <div class="col-md-12">
                <div>
                    <a href="{{ path('gt.catalog.job_add_form') }}">Add</a>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>created at</th>
                            <th>name</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    {% for j in jobs %}
                        <tr>
                            <td>{{ j.id }}</td>
                            <td>{{ j.createdTime | date ('Y-m-d H:i' ) }}</td>
                            <td>{{ j.name }}</td>
                            <td><a href="#">Edit</a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}