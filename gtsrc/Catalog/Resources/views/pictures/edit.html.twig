{% extends 'admin_base.html.twig' %}

{% block title %}{% trans %}Picture edit{% endtrans %}{% endblock %}

{% block body %}

    <div class="container">
        {# picture itself #}
        <div class="row">
            <div class="col-md-12">
                <h1>Edit Product <a href="{{ path('gt.catalog.product_edit', {sku:productPicture.product.sku, languageCode:'en'}) }}">{{ productPicture.product.sku }}</a> picture metadata</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form(form) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <img  alt="{{ productPicture.picture.name }}"
                      src="{{ productPicture.picture.configuredPath }}" />
            </div>
        </div>
    </div>
{% endblock %}