<h1>
    {% trans %}Categories{% endtrans %}
</h1>
<div>
    <a href="{{ path('gt.catalog.category_new') }}" class="btn btn-primary">
        {% trans %}Add new category{% endtrans %}
    </a>
</div>
<table>
    <tr>
        <th>{% trans %}Code{% endtrans %}</th>
        <th>{% trans %}Name{% endtrans %}</th>
        <th>Actions</th>
    </tr>
    {% for c in categories %}
        <tr>
            <td>{{ c.code }}</td>
            <td>{{ c.name }}</td>
            <td>
                <a href="{{ path('gt.catalog.category_edit', {code: c.code}) }}" class="btn btn-primary">
                    {% trans %}Edit{% endtrans %}
                </a>
            </td>
        </tr>
    {% endfor %}
</table>